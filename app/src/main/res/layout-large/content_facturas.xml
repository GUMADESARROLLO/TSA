<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/content_facturas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.guma.desarrollo.gmv.Activity.FacturasActivity"
    tools:showIn="@layout/activity_facturas">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:padding="5dp"
            android:background="@drawable/my_shape"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/tx1"
                android:layout_height="fill_parent"
                android:layout_width="100dp"

                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="VIA" />
            <TextView
                android:id="@+id/tx2"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="STATUS" />
            <TextView
                android:id="@+id/tx3"
                android:gravity="center"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="ACTUALIZADO" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ListView
                android:id="@+id/lstFacturas"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/tErrorHistico"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>

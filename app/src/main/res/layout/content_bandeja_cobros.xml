<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bandeja_cobros"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.guma.desarrollo.gmv.Activity.BandejaCobrosActivity"
    tools:showIn="@layout/activity_bandeja_cobros">

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgMoneyOff"
            android:src="@drawable/ic_money_off_black_48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtMoneyOff"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:text="@string/info_empry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_marginTop="5dp"
            android:id="@+id/listView_cobros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <TableRow
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INFORMACION DEL ARTÃCULO"
            />
    </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp">
            <TextView
                android:id="@+id/txtInCant"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Cantidad: "
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <EditText
                android:text=""
                android:inputType="number"
                android:id="@+id/txtFrmCantidad"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1" >
                <requestFocus />
            </EditText>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/row2">
            <TextView
                android:id="@+id/txtInPrese"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Presentacion: "
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/opciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbPresen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:layout_marginEnd="80dp"
                    android:text="PRESENTACION" />

                <RadioButton
                    android:id="@+id/rbUnidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginEnd="40dp"
                    android:text="UNIDAD"/>
            </RadioGroup>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp">
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Precio: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:inputType="text"
                android:id="@+id/txtFrmPrecio"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Bonificado: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:textAlignment="textEnd"
                android:id="@+id/sp_boni"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp"
            android:layout_margin="0dp">
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Existencia: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:inputType="text"
                android:id="@+id/txtFrmExistencia"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp"
            android:layout_margin="0dp">
            <include layout="@layout/content_lotes" />
            <!--<ListView
                android:id="@+id/listViewLotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />-->
        </TableRow>

    </TableLayout>
</LinearLayout>